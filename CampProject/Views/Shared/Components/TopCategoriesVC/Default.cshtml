@model List<Category> 

<div class="tech-btm">
    <h4>Categories</h4>
    <ul class="list-group single">

        @foreach (var category in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @category.Name
                <span class="badge badge-primary badge-pill">@category.Blogs.Count()</span>
            </li>
        }
    </ul>
</div>